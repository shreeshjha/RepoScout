#!/bin/bash
# Pre-commit hook to catch the obvious mistakes before they embarrass you

set -e

echo "Running pre-commit checks..."

# Format check
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code formatting failed. Run 'cargo fmt' to fix."
    exit 1
fi

# Clippy check
echo "ğŸ” Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues. Fix them before committing."
    exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
if ! cargo test --quiet; then
    echo "âŒ Tests failed. Fix them before committing."
    exit 1
fi

echo "âœ… All checks passed! Proceeding with commit..."
